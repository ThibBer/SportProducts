@startuml
hide circle

entity User {
    * id
    firstname
    lastname
    birth_date
}

entity Category {
    * id
    name
    label
}

entity Product  {
    * id
    name
    label
    description
    price
}

entity Order {
    *id
    date
}

entity OrderProduct {
    *id
    quantity
}

Order ||--o{ OrderProduct
User ||--o{ Order
Category ||--o{ Product
OrderProduct }o--|| Product

@enduml